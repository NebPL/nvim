{
  "languageserver": {
    "tsserver": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["typescript", "typescriptreact", "javascript", "javascriptreact"]
    }
  },
  "eslint.enable": true,
  "prettier.enable": true,

  "diagnostic.displayByAle": false,
  "diagnostic.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " | ",
  "diagnostic.refreshOnInsertMode": true,

  "suggest.snippetIndicator": "â®ž",
  "suggest.enablePreselect": true,
  "signature.enable": true,
  "go.useLanguageServer": true,
  "coc.preferences.formatOnSaveFiletypes": ["c", "cpp", "python"],

  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".git/", "compile_commands.json"]
    },
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.work", "go.mod", ".git/"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "pyright": {
      "command": "pyright-langserver",
      "args": ["--stdio"],
      "filetypes": ["python"],
      "rootPatterns": [".git/", "pyproject.toml", "setup.py", "requirements.txt"],
      "settings": {
        "python": {
          "analysis": {
            "typeCheckingMode": "basic",
            "autoSearchPaths": true,
            "useLibraryCodeForTypes": true
          }
        }
      }
    }
  },

  "svelte.enable-ts-plugin": true,
  "snippets.ultisnips.pythonPrompt": false
}

